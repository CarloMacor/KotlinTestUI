<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/idCardrow"
    android:layout_margin="@dimen/margin_cardrow"
    android:layout_height="@dimen/dim_cardrow"
    android:layout_width="@dimen/dim_cardrow"
    >

    <!-- full LinearLayout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- the main Image of Post  [Weight = 3] -->
        <ImageView
            android:id="@+id/idImgPost"
            android:src="@drawable/food_1"
            android:scaleType="centerCrop"
            android:layout_weight="@dimen/weight_image_cardrow"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <!-- the Full row of Main comment of Author  [Weight = 2] -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="@dimen/weight_post_cardrow"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <!-- pic of Author on Sx-->
            <ImageView
                android:id="@+id/idPicAuthor"
                android:src="@drawable/pic3"
                android:paddingTop="@dimen/padding_cardrow"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <!-- text and numbers  -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <!-- name of Author -->
                <TextView
                    android:id="@+id/idNameAuthor"
                    android:text="William :"
                    android:textSize="@dimen/authorname_cardrow"
                    android:textColor="@color/colorGrayMainComment1"
                    android:textStyle="italic|bold"
                    android:paddingTop="@dimen/padding_cardrow"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <!-- Main Comment of Author -->
                <TextView
                    android:id="@+id/idCommentAuthor"
                    android:text="Experiment with Dark Food"
                    android:textSize="@dimen/comment_cardrow"
                    android:textColor="@color/colorGrayMainComment2"
                    android:textStyle="italic"
                    android:layout_marginRight="@dimen/padding_cardrow"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <!-- numbers relative the post -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <ImageView
                        android:src="@drawable/ic_eye"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/idNumWatch"
                        android:text="3,769"
                        android:textSize="@dimen/number_cardrow"
                        android:textColor="@color/colorGrayMainComment2"
                        android:paddingLeft="@dimen/padding_cardrow"
                        android:paddingTop="@dimen/padding_topnumber_cardrow"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:src="@drawable/ic_comment"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/idNumSubComment"
                        android:text="87"
                        android:textSize="@dimen/number_cardrow"
                        android:textColor="@color/colorGrayMainComment2"
                        android:paddingLeft="@dimen/padding_cardrow"
                        android:paddingTop="@dimen/padding_topnumber_cardrow"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/ic_heart"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/idNumLove"
                        android:text="237"
                        android:textSize="@dimen/number_cardrow"
                        android:textColor="@color/colorGrayMainComment2"
                        android:paddingLeft="@dimen/padding_cardrow"
                        android:paddingTop="@dimen/padding_topnumber_cardrow"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>