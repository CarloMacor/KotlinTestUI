<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hcard_maincomment"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- image of Post Author -->
        <ImageView
            android:id="@+id/idPicAuthor"
            android:src="@drawable/pic3"
            android:paddingTop="@dimen/padding_maincomment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <!-- name of Author -->
            <TextView
                android:id="@+id/idNameAuthor"
                android:text="William :"
                android:textSize="@dimen/authorname_maincomment"
                android:textColor="@color/colorGrayMainComment1"
                android:textStyle="italic|bold"
                android:paddingTop="@dimen/halfpadding_maincomment"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <!-- Main comment of Author -->
            <TextView
                android:id="@+id/idCommentAuthor"
                android:text="Experiment with Dark Food"
                android:textSize="@dimen/comment_maincomment"
                android:textColor="@color/colorGrayMainComment2"
                android:textStyle="italic"
                android:layout_marginRight="@dimen/rigthpad_maincomment"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <!-- Values follower and so on -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:src="@drawable/ic_eye"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/idNumWatch"
                    android:text="3,769"
                    android:textSize="@dimen/number_maincomment"
                    android:textColor="@color/colorGrayMainComment2"
                    android:paddingLeft="@dimen/padding_maincomment"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:src="@drawable/ic_comment"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/idNumSubComment"
                    android:text="87"
                    android:textSize="@dimen/number_maincomment"
                    android:textColor="@color/colorGrayMainComment2"
                    android:paddingLeft="@dimen/padding_maincomment"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_heart"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/idNumLove"
                    android:text="237"
                    android:textSize="@dimen/number_maincomment"
                    android:textColor="@color/colorGrayMainComment2"
                    android:paddingLeft="@dimen/padding_maincomment"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></LinearLayout>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>